
// Example: 12.1.3

component sub_c {
	action A {
		rand int f;
		rand int g;
	}
}

component top {
	sub_c	sub1;
	sub_c	sub2;
	
	
	action B {
		rand int f;
		rand int h;
		sub_c::A a;
		
		activity {
			a with {
				f < h; // sub-action's f and containing action's h
				g == f; // sub-action's g and containing action's f
				a.comp == comp.sub1; // sub-action's component is sub-component
										// 'sub1' of the parent action's component
			};
		}
	}
}


