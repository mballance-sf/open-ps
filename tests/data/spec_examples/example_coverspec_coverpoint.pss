
// Example: 13.3

enum burst_type_e { INCR, WRAP };

struct transaction {
	rand bit[31:0] addr;
	rand burst_type_e burst_type;
	rand bit[4:0] burst_len;
 
	coverspec trans_cov(transaction t) {
		addr_ranges : coverpoint t.addr {
			bins low_addrs [0x00000000..0x0000FFFF]/64;
		}
	}
}
