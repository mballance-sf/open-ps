
// Example: 11.3.1.3

component top {
	action A {
		rand bit[3:0] f1;

		exec body {
			set_val(f1);
		}
	}

	action B {
		A a1, a2;

		activity {
			a1;
			a2 with {
				f1 < 10;
			};
		}
	}
	
	action C {
		action bit[3:0] max;
		B b1;

		activity {
			max;
			b1 with {
				a1.f1 <= max;
			};
		}
	}
}
