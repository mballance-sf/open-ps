
component top {
buffer mem_obj {
int dat;
constraint dat%2 == 0; // dat must be even
}
action write1 {
output mem_obj out_obj;
constraint out_obj.dat in [1..5];
}
action write2 {
output mem_obj out_obj;
constraint out_obj.dat in [6..10];
}
action read {
input mem_obj in_obj;
constraint in_obj.dat in [8..12];
}
action test {
activity {
do write1;
do read;
}
}
}

