
// Example: 16.12.3

component comp {

	action A1 {
		rand bit mode;
		rand bit[31:0] val;

		constraint {
			if (mode) {
				val in [0..10];
			} else {
				val in [10..100];
			}
		}
	}
}

package pkg {
	// Export A1, providing a mapping to field 'mode'
	export target comp::A1(bit mode);
}
