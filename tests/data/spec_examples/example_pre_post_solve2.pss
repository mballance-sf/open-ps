
// Example: 12.2.10.2

component top {
	
	buffer mem_obj {
		exec post_solve { /*...*/ }
	}
	
	action write {
		output mem_obj out_obj;
		exec post_solve { /*...*/ }
	}
	
	action read {
		input mem_obj in_obj;
		exec post_solve { /*...*/ }
	}
	
	action test {
		write wr;
		read rd;
		activity {
			bind wr rd;
			wr;
			rd;
		}
		
		exec post_solve { /*...*/ }
	}

}