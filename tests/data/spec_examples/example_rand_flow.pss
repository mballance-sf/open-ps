
// Example: 12.2.2

component top {
	buffer mem_obj {
	int val;
	constraint val%2 == 0; // val must be even
	}
	
	action write1 {
		output mem_obj out_obj;
		constraint out_obj.val in [1..5];
	}
	
	action write2 {
		output mem_obj out_obj;
		constraint out_obj.val in [6..10];
	}
	
	action read {
		input mem_obj in_obj;
		constraint in_obj.val in [8..12];
	}
	
	action test {
		activity {
			do write1;
			do read;
		}
	}
}


